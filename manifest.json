{
    "name": "Ubooquity",
    "id": "ubooquity",
    "packaging_format": 1,
    "description": {
        "en": "Ubooquity is a free home server for your comics and ebooks library",
        "fr": "French"
    },
    "version": "2.1.2~ynh1",
    "url": "http://vaemendis.net/ubooquity/",
    "upstream": {
        "license": "free",
        "website": "http://vaemendis.net/ubooquity/",
        "demo": "http://vaemendis.net/ubooquity/",
        "admindoc": "https://vaemendis.github.io/ubooquity-doc/pages/manual.html",
        "userdoc": "https://vaemendis.github.io/ubooquity-doc/pages/installation-guide.html",
        "code": "https://github.com/vaemendis/ubooquity-doc"
    },
    "license": "free",
    "maintainer": {
        "name": "John doe",
        "email": "john.doe@example.com"
    },
    "requirements": {
        "yunohost": ">= 4.3.0"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "java"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/",
                "default": "/"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["en", "mo"],
                "default": "en"
            },
            {
                "name": "password",
                "type": "password",
                "help": {
                    "en": "Admin page password.",
                    "fr": "French."
                }
            }
        ]
    }
}
